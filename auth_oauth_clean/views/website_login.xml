<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template name="Website login" id="login_submit" inherit_id="web.login">

        <!-- Remove the login button -->
        <xpath expr="//button[@type='submit']" position="replace"/>

        <!-- Add login button to a smarter location -->
        <xpath expr="//div[@class='form-group field-password']" position="after">
            <div name="login-signup" class="form-group pull-left">
                <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}" class="btn btn-link">Sign up</a>
                <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}" class="btn btn-link">Reset Password</a>
            </div>

            <div name="login-submit" class="form-group clearfix oe_login_buttons text-right">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>
        </xpath>

    </template>

</odoo>
